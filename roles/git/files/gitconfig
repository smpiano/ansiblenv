[core]
  excludesfile = ~/.gitignore

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[credential]
  helper = cache --timeout=3600

[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"

[user]
	name = Matias Piano
	email = smpiano@gmail.com

[fetch]
  prune = true
[alias]
	co = checkout
	st = status
	ci = commit
	last = log -1 HEAD
	br = branch
